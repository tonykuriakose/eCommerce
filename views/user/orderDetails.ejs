  <script>
    function handleDropdownChange(selectElement) {
        var selectedValue = selectElement.value;
        if(selectedValue == "cancel"){
            window.location.href = `http://localhost:3001/cancelOrder?orderId=${orderId.value}`;
        }else if (selectedValue == "returnrequest"){
            window.location.href = `http://localhost:3001/returnrequestOrder?orderId=${orderId.value}`;
        }
    }
</script>
