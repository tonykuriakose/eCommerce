<%- include("../../views/partials/admin/header") %>
<section class="content-main">
    <div class="content-header">
        <div>
            <h2 class="content-title card-title">Dashboard </h2>
        </div>
        <div>
            <a href="/admin/salesReport" class="btn btn-primary"><i class="text-muted material-icons md-post_add"></i>Create report</a>
        </div>
    </div>
    <div class="row">
        <!-- Existing content here -->

        <!-- Sale Statistics Chart -->
        <div class="row">
            <div class="col-xl-8 col-lg-12">
                <div class="col-xl-12 col-lg-12">
                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title">Sale statistics</h5>
                            <canvas id="myChart1" height="120px"></canvas>
                        </article>
                    </div>
                </div>
            </div>
        </div>

        <!-- New Best Selling Products Chart -->
        <div class="row">
            <div class="col-xl-8 col-lg-12">
                <div class="col-xl-12 col-lg-12">
                    <div class="card mb-4">
                        <article class="card-body">
                            <h5 class="card-title">Best Selling Products, Categories, and Brands</h5>
                            <canvas id="bestSellingChart" height="120px"></canvas>
                        </article>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctxL = document.getElementById("myChart1").getContext('2d');
    var myLineChart;
    async function fetchMonthlyData() {
        try {
            const response = await fetch('/admin/monthly-report');
            const data = await response.json();
            const months = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
            console.log("This is data : ",data);
            const allMonthsRevenue = Array.from({ length: 12 }, () => 0);
            const allMonthsOrderCount = Array.from({ length: 12 }, () => 0);
            data.labels.forEach((label, index) => {
                const monthIndex = months.indexOf(label);
                if (monthIndex !== -1) {
                    allMonthsRevenue[monthIndex] = data.revenueData[index];
                    allMonthsOrderCount[monthIndex] = data.orderCountData[index];
                }
            });

            myLineChart = new Chart(ctxL, {
                type: 'line',
                data: {
                    labels: months,
                    datasets: [{
                            label: "Total Revenue",
                            data: allMonthsRevenue,
                            backgroundColor: 'rgba(105, 0, 132, .2)',
                            borderColor: 'rgba(200, 99, 132, .7)',
                            borderWidth: 2
                        },
                        {
                            label: "Order Count",
                            data: allMonthsOrderCount,
                            backgroundColor: 'rgba(0, 137, 132, .2)',
                            borderColor: 'rgba(0, 10, 130, .7)',
                            borderWidth: 2
                        }
                    ]
                },
                options: {
                    responsive: true
                }
            });
        } catch (error) {
            console.error(error);
        }
    }
    fetchMonthlyData();
    var ctxB = document.getElementById("bestSellingChart").getContext('2d');
    var bestSellingChart;
    async function fetchBestSellingData() {
        try {
            const response = await fetch('/admin/bestSellingData');
            const data = await response.json();

            const productNames = data.products.map(p => p.name);
            const productSales = data.products.map(p => p.sales);

            const categoryNames = data.categories.map(c => c.name);
            const categorySales = data.categories.map(c => c.sales);

            const brandNames = data.brands.map(b => b.name);
            const brandSales = data.brands.map(b => b.sales);

            bestSellingChart = new Chart(ctxB, {
                type: 'bar',
                data: {
                    labels: productNames.concat(categoryNames, brandNames),
                    datasets: [
                        {
                            label: 'Sales',
                            data: productSales.concat(categorySales, brandSales),
                            backgroundColor: [
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 206, 86, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                                'rgba(153, 102, 255, 0.2)',
                                'rgba(255, 159, 64, 0.2)',
                                'rgba(255, 99, 132, 0.2)',
                                'rgba(54, 162, 235, 0.2)',
                                'rgba(75, 192, 192, 0.2)',
                            ],
                            borderColor: [
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(255, 206, 86, 1)',
                                'rgba(75, 192, 192, 1)',
                                'rgba(153, 102, 255, 1)',
                                'rgba(255, 159, 64, 1)',
                                'rgba(255, 99, 132, 1)',
                                'rgba(54, 162, 235, 1)',
                                'rgba(75, 192, 192, 1)',
                            ],
                            borderWidth: 1
                        }
                    ]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        } catch (error) {
            console.error(error);
        }
    }
    fetchBestSellingData();
</script>
